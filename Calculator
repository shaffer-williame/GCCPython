print("This is a calculator!")
num1 = float(input("Enter your first number:"))
oper = input("Enter in a basic operator:")
num2 = float(input("Enter your second number:"))

if oper == "+":
   print(num1 + num2)
elif oper == "-":
   print(num1 - num2)
elif oper == "*":
   print(num1 * num2)
elif oper == "/":
   print(num1 / num2)
else:
   print("Invalid operator entered.")
